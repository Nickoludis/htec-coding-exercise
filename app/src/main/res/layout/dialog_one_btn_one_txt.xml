<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customAttribute="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.htec.codingexercise.ui.widget.CustomFontTextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/green"
            android:textSize="@dimen/dialog_title"
            customAttribute:customFontFamily="FONT_STYLE_1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <com.htec.codingexercise.ui.widget.CustomFontTextView
            android:id="@+id/dialog_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="Description"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/dialog_description"
            customAttribute:customFontFamily="FONT_STYLE_3" />

    </LinearLayout>

        <com.htec.codingexercise.ui.widget.CustomButton
            android:id="@+id/dialog_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="20sp"
            customAttribute:buttonColor="SELECTOR_2"
            customAttribute:customFontFamily="FONT_STYLE_9" />

</LinearLayout>